import java io.*;
class Employee
{
	private static int eid=1;
	private int eid;
	private String name,dept;
	private float sal;
	protected double salary;
	
	Employee(){
	}

	Employee(String name,String dept,double salary)
	{
		id=eid;
		eid++;
		this.name=name;
		this.dept=dept;
		this.salary=salary;
	}

	void display()
	{
		System.out.println("ID="+id);
		System.out.println("Name="+name);
		System.out.println("Department="+dept);
		System.out.println("Salary="+salary);	
	}
}

class Manager extends Employee
{
	private float bonus;

	Manager()
	{	
	}

	Manager(String name,String dept,double salary,double bonus)
	{
		super(name,dept,salary);
		this.bonus=bonus;
	}
	
	void display()
	{
		super.display();
		System.out.println("Bonus="+bonus);
	}
}

class main
{
	public static void main(String args[]) throws IOException
	{
		BufferedReader br=new BufferedReader(new InputStreamReader(System.in));
		System.out.println("Enter count of employees:");
		int n=Integer.parseInt(br.readLine());
		Manager man[]=new Manager[n];		

		for(int i=0;i<n;i++)
		{
			System.out.println("Employee id="+man[i].eid)
			System.out.println("Enter Employee name:");			
			String nm=br.readLine();

			System.out.println("Enter Employee dept:");
			String pos=br.readLine();
			while(true)
			{
				System.out.println("Enter Employee salary:");
				sal=Float.parseFloat(br.readLine()); 	
				if(sal>0)
					break;
				else
					System.out.println("Re-enter");
			}
			emp[i]=new Employee(nm,pos,sal);
		}
			
	
