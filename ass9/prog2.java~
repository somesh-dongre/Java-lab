/*import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JButton;
import javax.swing.JPanel;
import javax.swing.JTextField;
import javax.swing.SwingConstants;*/
import java.awt.event.*;
import java.awt.*;
import javax.swing.*;

public class program2 extends JFrame implements ActionListener
{
	JLabel LB,LD,LO,LH,pd,po,ph;
	JTextField TNo,TD,TB,TO,TH;
	JButton calculate,exit,clear;
	JPanel p;
	public prog2()
	{
	 LD=new JLabel("Decimal:");
	 LB=new JLabel("Binary:");
	 LO=new JLabel("Octal:");
	 LH=new JLabel("Hexadecimal:");
	 pd=new JLabel("Result in Binary");
	 po=new JLabel("Result in Octal ");
	 ph=new JLabel("Result in Hexadecimal ");
	
	 TD=new JTextField(20);
	 TB=new JTextField(20);
	 TO=new JTextField(20);
	 TH=new JTextField(20);

	 calculate=new JButton("convert");
	 exit=new JButton("exit");

	 p=new JPanel();
	 p.setLayout(new GridLayout(5,2));
	 p.add(LD);
	 p.add(TD);
	 p.add(LB);
	 //p.add(TB);
	 p.add(pd);
	 p.add(LO);
	 //p.add(TO);
	 p.add(po);
	 p.add(LH);
	 //p.add(TH);
	 p.add(ph);
	 p.add(calculate);
	 p.add(exit);

	

	 setLayout(new FlowLayout());
	 add(p);
	 setTitle("Binary Conversion");
	 setSize(500,500);
	 setVisible(true);
	 setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

	 calculate.addActionListener(this);
	 exit.addActionListener(this);
	}

	public void actionPerformed(ActionEvent ae)
	{
	 JButton btn = (JButton)ae.getSource();
	 if(btn==calculate)
	 {
		int n=Integer.parseInt(TD.getText());
		pd.setText(Integer.toBinaryString(n));
		po.setText(Integer.toOctalString(n));
		ph.setText(Integer.toHexString(n));
	 }
	  /*if(btn==clear)
		{
			TD.setText("");
			pd.setText("");
			po.setText("");
			ph.setText("");
		}*/
	 if(btn==exit)
		{
			System.exit(0);
		}

	}
	public static void main(String[] args)
	{
		new prog2();
	}
}
