import java.io.*; 

class Vehicle
{
	String company;
	double price;

}


class LightMotorVehicle extends Vehicle
{
	double mileage;
	LightMotorVehicle(double mileage,String company,double price)
	{
		this.mileage=mileage;
		this.company=company;
		this.price=price;
	}
	
	void display()
	{
		System.out.println("Mileage of a vehivle is :"+LightMotorVehicle);
	}
}



class HeavyMotorVehicle extends Vehicle
{
	double capacity;
	
	HeavyMotorVehicle(double capacity)	
	{
		this.capacity=capacity;
	}
	
	void display()
	{
		System.out.println("");
	}
}


class Program2
{
	public static void main(String args[])
	{
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		double mileage;
		String company;
		double price;

		System.out.println("Enter your choice ");
		System.out.println("1 for lighweightvehicle");	
		System.out.println("2 for Heavyweightvehicle");
		int ch = Integer.parseInt(br.readLine());
		System.out.println("Enter how many you want : ");
		int n = Integer.parse(br.readLine());
		switch(ch)
		{
			case 1:

				LightMotorVehicle L[] = LightMotorVehicle[n];
				for(int i=0;i<n;i++)
				{
					System.out.println("Enter company name  ");
					company = Integer.parseInt(br.readLine());
					System.out.println("Enter price  ");
					price = Integer.parseInt(br.readLine());
					System.out.println("Enter mileage ");
					mileage = Integer.parseInt(br.readLine());
					L[i] = new LightMotorVehicle( mileage, company, price);
				}	
				
			for(int i=0;i<n;i++)
			{
				System.out.println(L[i].display());
			}	


		}
		
	}

}
