import java.awt.*;
import java.applet.*;

/*<applet code = "mouse" height = 500 width = 500>
</applet>*/
	
public class mouse extends Applet
{
	public void init()
	{
		Lable l1 = new Lable("Mouse X");
		Lable l2 = new Lable("Mouse X co-ordinate");
		Lable l3 = new Lable("Mouse Y");
		Lable l4 = new Lable("Mouse Y co-ordiante");

		setLayout(new GridLayout(3,2));
		add(l1);
		add(l2);
		add(l3);
		add(l4);
	}
}
